# dork.fun — Docker Compose Environment
# Copy this file to .env and edit as needed:
#   cp .env.example .env

# Database
DATABASE_URL=postgres://postgres:dorkfun@localhost:5433/dorkfun

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=8080
LOG_LEVEL=info
ADMIN_SECRET=
MATCH_TIMEOUT_MS=300000
STALE_MATCH_TIMEOUT_MS=3600000
DISPUTE_WINDOW_MS=300000

# On-chain settlement + staking (optional — leave empty to disable)
RPC_URL=
SERVER_PRIVATE_KEY=
SETTLEMENT_ADDRESS=
ESCROW_ADDRESS=
# JSON mapping of server game slugs to on-chain bytes32 game IDs (from deploy output)
# e.g. {"tictactoe":"0x...","chess":"0x...","connectfour":"0x...","checkers":"0x...","othello":"0x...","hex":"0x..."}
GAME_ONCHAIN_IDS=

# Web
WEB_PORT=3000
# Set for production builds to point the frontend at the API server.
# Leave empty for local dev (Vite proxy handles it).
VITE_API_URL=https://engine.dork.fun
